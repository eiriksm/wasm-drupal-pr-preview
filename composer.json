{
    "name": "drupal/recommended-project",
    "description": "Project template for Drupal projects with a relocated document root",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "homepage": "https://www.drupal.org/project/drupal",
    "support": {
        "docs": "https://www.drupal.org/docs/user_guide/en/index.html",
        "chat": "https://www.drupal.org/node/314178"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^2.0",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.5",
        "drupal/core-composer-scaffold": "^10.0",
        "drupal/core-recommended": "^10.3",
        "drupal/gutenberg": "^3.0",
        "drupal/gutenberg_starter": "^1.1",
        "drush/drush": "^13.2",
        "eiriksm/build-drupal-wasm": "dev-main",
        "php-tuf/composer-stager": "^2-beta"
    },
    "scripts": {
        "test": [
            "echo 'todo'"
        ],
        "site-install": [
            "drush site:install --existing-config -y"
        ],
        "build-wasm": [
            "composer install --no-dev --optimize-autoloader",
            "@composer site-install",
            "#Prune some unneded tests so the bundle is smaller",
            "find . -depth -type d -name tests -exec rm -r -f '{}' ';'",
            "composer archive --dir=. --file=public/assets/build --format=zip"
        ]
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "eiriksm/build-drupal-wasm": true,
            "php-http/discovery": true,
            "phpstan/extension-installer": true
        },
        "sort-packages": true
    },
    "extra": {
        "patches": {
            "drupal/gutenberg": {
                "Fix": "./patches/gutenberg_fix_install_v2.diff"
            }
        },
        "drupal-scaffold": {
            "locations": {
                "web-root": "web/"
            },
            "file-mapping": {
                "[project-root]/.gitattributes": {
                    "append": "assets/gitattributes-extra"
                }
            }
        },
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "web/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "web/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "web/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        }
    }
}
